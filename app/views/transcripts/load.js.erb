$('#beforeLoadData').css('display','none');
$('#afterLoadData').css('display','block');
$('#loadedDeal').html($('#choose_deal').val());
$('#cancel').css('display','none');
$('#change').css('display','inline');
$('#cancel').removeAttr('disabled');
$('#physical').attr('checked','checked');
$('#accounting').removeAttr('checked');
$('#fromDate').html($('#from_datepicker').val());
$('#fromDebit').html(parseFloat('<%= if (@transcript.opening && @transcript.opening.side)
                                       @transcript.opening.amount
                                     else
                                       "0"
                                     end %>').toFixed(2));
$('#fromCredit').html(parseFloat('<%= if (@transcript.opening && !@transcript.opening.side)
                                        @transcript.opening.amount
                                      else
                                        "0"
                                      end %>').toFixed(2));
$('#turnoversDebit').html(parseFloat('<%= if (@transcript.total_debits)
                                            @transcript.total_debits
                                          else
                                            "0"
                                          end %>').toFixed(2));
$('#turnoversCredit').html(parseFloat('<%= if (@transcript.total_credits)
                                             @transcript.total_credits
                                           else
                                             "0"
                                           end %>').toFixed(2));
$('#exchangeDebit').html('');
$('#exchangeCredit').html('');
$('#toDate').html($('#to_datepicker').val());
$('#toDebit').html(parseFloat('<%= if (@transcript.closing && @transcript.closing.side)
                                     @transcript.closing.amount
                                   else
                                     "0"
                                   end %>').toFixed(2));
$('#toCredit').html(parseFloat('<%= if (@transcript.closing && !@transcript.closing.side)
                                      @transcript.closing.amount
                                    else
                                      "0"
                                    end %>').toFixed(2));

$('#hFromDebit').val(parseFloat('<%= if (@transcript.opening && @transcript.opening.side)
                                       @transcript.opening.value
                                     else
                                       "0"
                                     end %>').toFixed(2));
$('#hFromCredit').val(parseFloat('<%= if (@transcript.opening && !@transcript.opening.side)
                                        @transcript.opening.value
                                      else
                                        "0"
                                      end %>').toFixed(2));
$('#hTurnoversDebit').val(parseFloat('<%= if (@transcript.total_debits_value)
                                            @transcript.total_debits_value
                                          else
                                            "0"
                                          end %>').toFixed(2));
$('#hTurnoversCredit').val(parseFloat('<%= if (@transcript.total_credits_value)
                                             @transcript.total_credits_value
                                           else
                                             "0"
                                           end %>').toFixed(2));
$('#hExchangeDebit').val(parseFloat('<%= if (@transcript.total_debits_value)
                                           @transcript.total_debits_diff
                                         else
                                           "0"
                                         end %>').toFixed(2));
$('#hExchangeCredit').val(parseFloat('<%= if (@transcript.total_credits_value)
                                            @transcript.total_credits_diff
                                          else
                                            "0"
                                          end %>').toFixed(2));
$('#hToDebit').val(parseFloat('<%= if (@transcript.closing && @transcript.closing.side)
                                     @transcript.closing.value
                                   else
                                     "0"
                                   end %>').toFixed(2));
$('#hToCredit').val(parseFloat('<%= if (@transcript.closing && !@transcript.closing.side)
                                      @transcript.closing.value
                                    else
                                      "0"
                                    end %>').toFixed(2));
