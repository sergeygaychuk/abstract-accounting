<script type="text/javascript">
  var dataPage = null;
  var crossPage = "";
  var crossPageLink = "";
  var cancelRequest = false;
  var editRowId = null;

  function clearPageSession(model) {
    dataPage = new Object();
    dataPage[model] = new Object();
  }
  function hasPageSessionData(model, attr) {
    return (model in dataPage) && (attr in dataPage[model]);
  }
  function getPageSessionData(model, attr) {
    if (hasPageSessionData(model, attr)) return dataPage[model][attr];
    return null;
  }
  function setPageSessionData(model, attr, value) {
    dataPage[model][attr] = value;
  }
  function deletePageSessionData(model, attr) {
    delete dataPage[model][attr];
  }

  $(window).bind("hashchange", function() {
    if(!cancelRequest) {
      ajaxRequest(location.hash.substr(1, location.hash.length));
    } else {
      cancelRequest = false;
    }
  });

  $(".page_link").live("click", function() {
    crossPage = "";
    crossPageLink = "";
    dataPage = null;
    if($(this).attr("href") == location.hash) {
      ajaxRequest(location.hash.substr(1, location.hash.length));
    }
  });

  $(document).ready(function () {
    if(location.hash.length > 0) {
      ajaxRequest(location.hash.substr(1, location.hash.length));
    }
  });

  $(".button_to").live("submit", function() {
    cancelRequest = true;
    location.hash = $(this).attr("action").substr(1, $(this).attr("action").length);
  });

  function fixPager(param, grid) {
    if(param == "records") {
      var rowNum = $("#" + grid).getGridParam("rowNum");
      $("#" + grid + "_toppager").find(".ui-pg-selbox").children("[value=" + rowNum + "]")
                                 .attr("selected", "true");
    }
  }
</script>

