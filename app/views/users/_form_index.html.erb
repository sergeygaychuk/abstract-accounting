<script type="text/javascript">
  var canSelect = true;
  $("#users_list").trigger("reloadGrid");
  $("#roles").css("display","none");
</script>

<table>
  <tr align="right">
    <td>
      <%= button_to "new", new_user_path, :method => :get, :remote => true %>
    </td>
    <td width="70">
      <%= button_to "change", edit_user_path(0), :id => 'change_user',
          :method => :get, :remote => true, :disabled => true %>
    </td>
  </tr>
  <tr align="left">
    <td colspan="2">
      email:
      <input id="user_email" type="text" disabled="true" value="" size="80" />
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <div id="roles" style="display: none">
        <p>Roles</p>
        <% for role in Role.find(:all) %>
          <div>
            <%= check_box_tag "user_role_id_" + role.id.to_s, role.id, false, :disabled => true %>
            <%= role.name %>
          </div>
        <% end %>
      </div>
    </td>
  </tr>
</table>
