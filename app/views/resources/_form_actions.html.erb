<script type="text/javascript">
  var tagResource = unescape($('#hide_asset_tag').val());
  $('#resource_tag_a').val(tagResource);
  function escape(text)
  {
    return text.replace(/&/g, '&amp;')
               .replace(/</g, '&lt;')
               .replace(/>/g, '&gt;')
               .replace(/"/g, '&quot;');
  }
  function unescape(text)
  {
    return text.replace(/&quot;/g, '"')
               .replace(/&lt;/g, '<')
               .replace(/&gt;/g, '>')
               .replace(/&amp;/g, '&');
  }
  function sendTagAsset()
  {
    $('#hide_asset_tag').val(escape($('#resource_tag_a').val()));
  }
  function sendTagMoney()
  {
    $('#hide_money_code').val(escape($('#resource_code_a').val()));
    $('#hide_money_tag').val(escape($('#resource_tag_a').val()));
  }
  function changeType()
  {
    if($('#resource_type_a').attr('checked'))
    {
      $.ajax({url: '<%= new_money_resources_path %>'})
    }
    else
    {
      $.ajax({url: '<%= new_asset_resources_path %>'})
    }
  }
</script>

